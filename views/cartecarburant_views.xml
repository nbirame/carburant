<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="carburant_cartecarburant_action" model="ir.actions.act_window">
        <field name="name">Carte Carburant</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">carburant.cartecarburant</field>
        <field name="view_mode">tree,form,activity,graph,pivot</field>
    </record>
    <record id="carburant_cartecarburant_tree" model="ir.ui.view">
        <field name="name">carburant.cartecarburant.tree</field>
        <field name="model">carburant.cartecarburant</field>
        <field name="arch" type="xml">
            <tree string="La liste des cartecarburants de carburant">
                <field name="libelle"/>
                <field name="detenteur"/>
                <field name="numero"/>
                <field name="type_carte"/>
                <field name="fourniseur"/>
            </tree>
        </field>
    </record>
    <record id="carburant_cartecarburant_search" model="ir.ui.view">
        <field name="model">carburant.cartecarburant</field>
            <field name="arch" type="xml">
            <search>
               <field name="libelle"/>
               <field name="detenteur"/>
            </search>
        </field>
    </record>
    <record id="carburant_cartecarburant_form" model="ir.ui.view">
        <field name="name">carburant.cartecarburant.form</field>
        <field name="model">carburant.cartecarburant</field>
        <field name="arch" type="xml">
            <form string="Détail d'une cartecarburant de carburant">
                <sheet>
                      <h1>Informations</h1>
                      <group name="group_top" col="4">
                          <field name="libelle" />
                          <field name="detenteur"/>
                          <field name="numero"/>
                          <field name="fourniseur"/>
                          <field name="type_carte"/>
                      </group>
                      <group>
                          <h1>Quantité</h1>
                             <field name="quantite"/>
                             <field name="nb_littre"/>
                             <field name="restant_littre"/>
                      </group>
                      <group>
                          <h1>Couts</h1>
                            <field name="montant"/>
                             <field name="montant_cons"/>
                      </group>


                    <notebook>
                      <page name="page_lines" string="Chargement">
                        <field name="chargement_ids">
                              <tree string="Chargement" editable="bottom">
                                    <field name="date"/>
                                    <field name="nb_littre"/>
                                    <field name="prix"/>
                                    <field name="montant"/>
                               </tree>
                        </field>
                      </page>
                      <page name="page_lines" string="Consommation">
                        <field name="consommation_ids" optional="show">
                          <tree string="Consommation" editable="bottom">
                                <field name="vehicule_id"/>
                                <field name="nb_littre"/>
                                <field name="prix"/>
                                <field name="total"/>
                          </tree>
                       </field>
                      </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>


    <menuitem
        name="Carburant"
        id="menu_carburant_root"/>
    <menuitem
        name="Carburant"
        id="menu_carburant_carburant"
        parent="menu_carburant_root"
        sequence="1"/>
    <menuitem
        id="menu_cartecarburant_miss"
        name="Carte"
        parent="menu_carburant_carburant"
        action="carburant_cartecarburant_action"
        sequence="1"/>

</odoo>
