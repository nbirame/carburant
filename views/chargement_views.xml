<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="carburant_chargement_action" model="ir.actions.act_window">
        <field name="name">Chargement de carte</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">carburant.chargement</field>
        <field name="view_mode">tree,form,activity,graph,pivot</field>
    </record>
    <record id="carburant_chargement_tree" model="ir.ui.view">
        <field name="name">carburant.chargement.tree</field>
        <field name="model">carburant.chargement</field>
        <field name="arch" type="xml">
            <tree string="La liste des chargements de carburant">
                <field name="date"/>
                <field name="nb_littre"/>
                <field name="prix"/>
                <field name="montant"/>
            </tree>
        </field>
    </record>
    <record id="carburant_chargement_search" model="ir.ui.view">
        <field name="model">carburant.chargement</field>
            <field name="arch" type="xml">
            <search>
               <field name="date"/>
            </search>
        </field>
    </record>
    <record id="carburant_chargement_form" model="ir.ui.view">
        <field name="name">carburant.chargement.form</field>
        <field name="model">carburant.chargement</field>
        <field name="arch" type="xml">
            <form string="DÃ©tail d'une chargement de carburant">
                <sheet>
                  <div class="oe_title">
                      <group name="group_top" col="4">
                          <field name="date" />
                          <field name="nb_littre"/>
                          <field name="prix"/>
                            <field name="montant"/>
                          <field name="carte_id"/>
                      </group>
                  </div>
                  <!-- More elements will be added from here... -->
                </sheet>
            </form>
        </field>
    </record>



    <menuitem
        name="Carburant"
        web_icon="carburant,static/description/icon.png"
        id="menu_carburant_root"/>
    <menuitem
        name="Carburant"
        id="menu_carburant_carburant"
        parent="menu_carburant_root"
        sequence="1"/>
    <menuitem
        id="menu_chargement_miss"
        name="Chargement"
        groups="carburant.group_carburant_comptability,carburant.group_carburant_visiteur"
        parent="menu_carburant_carburant"
        action="carburant_chargement_action"
        sequence="2"/>

</odoo>
