<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="carburant_suivi_essence_action" model="ir.actions.act_window">
        <field name="name">Suivi Essence</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">carburant.suivi_essence</field>
        <field name="view_mode">tree,form,activity,graph,pivot</field>
    </record>
    <record id="carburant_suivi_essence_tree" model="ir.ui.view">
        <field name="name">carburant.suivi_essence.tree</field>
        <field name="model">carburant.suivi_essence</field>
        <field name="arch" type="xml">
            <tree string="La liste des Suivi du niveau d'essence">
                <field name="libelle"/>
                <field name="detenteur"/>
                <field name="numero"/>
                <field name="type_carte"/>
                <field name="fourniseur"/>
            </tree>
        </field>
    </record>
    <record id="carburant_suivi_essence_search" model="ir.ui.view">
        <field name="model">carburant.suivi_essence</field>
            <field name="arch" type="xml">
            <search>
               <field name="libelle"/>
               <field name="detenteur"/>
            </search>
        </field>
    </record>
    <record id="carburant_suivi_essence_form" model="ir.ui.view">
        <field name="name">carburant.suivi_essence.form</field>
        <field name="model">carburant.suivi_essence</field>
        <field name="arch" type="xml">
            <form string="Détail d'un suivi du niveau d'essence">
                <sheet>
                      <h1>Informations</h1>
                      <group name="group_top" col="4">
                          <field name="libelle" />
                          <field name="detenteur"/>
                          <field name="numero"/>
                          <field name="fourniseur"/>
                          <field name="type_carte"/>
                      </group>
                      <group>
                          <h1>Quantité</h1>
                             <field name="quantite"/>
                             <field name="nb_littre"/>
                             <field name="restant_littre"/>
                      </group>
                      <group>
                          <h1>Couts</h1>
                            <field name="montant"/>
                             <field name="montant_cons"/>
                      </group>


                    <notebook>
                      <page name="page_lines" string="Chargement">
                        <field name="chargement_ids">
                              <tree string="Chargement" editable="bottom">
                                    <field name="date"/>
                                    <field name="nb_littre"/>
                                    <field name="prix"/>
                                    <field name="montant"/>
                               </tree>
                        </field>
                      </page>
                      <page name="page_lines" string="Consommation">
                        <field name="consommation_ids" optional="show">
                          <tree string="Consommation" editable="bottom">
                                <field name="vehicule_id"/>
                                <field name="nb_littre"/>
                                <field name="prix"/>
                                <field name="total"/>
                          </tree>
                       </field>
                      </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>


    <menuitem
        name="Suivi Essence"
        id="menu_carburant_root"/>
    <menuitem
        name="Carburant"
        id="menu_carburant_carburant"
        parent="menu_carburant_root"
        sequence="1"/>
    <menuitem
        id="menu_suivi_essence_miss"
        name="Carte"
        groups="carburant.group_carburant_comptability,carburant.group_carburant_visiteur"
        parent="menu_carburant_carburant"
        action="carburant_suivi_essence_action"
        sequence="1"/>

</odoo>
