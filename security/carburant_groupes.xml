<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="module_carburant">
            <field name="name">Carburant</field>
            <field name="description">Groupe utilisateurs et gestionnaires de Carburant</field>
            <field name="sequence">5</field>
        </record>

    <record id="group_carburant_daf" model="res.groups">
        <field name="name">DAF</field>
        <field name="category_id" ref="carburant.module_carburant"/>
        <field name="comment">Groupe Direction administratif financière</field>
    </record>
    <record id="group_carburant_visiteur" model="res.groups">
        <field name="name">Visiteur</field>
        <field name="category_id" ref="carburant.module_carburant"/>
        <field name="comment">Visiteur des taches</field>
    </record>
    <record id="group_carburant_genereaux" model="res.groups">
        <field name="name">Moyen Généreaux</field>
        <field name="category_id" ref="carburant.module_carburant"/>
        <field name="comment">Groupe Moyen Généreaux</field>
    </record>
    <record id="group_carburant_comptability" model="res.groups">
        <field name="name">Comptabilté</field>
        <field name="category_id" ref="carburant.module_carburant"/>
        <field name="comment">Groupe Comptabilité</field>
    </record>
    <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('group_carburant_visiteur'))]"/>
        </record>
    </data>

</odoo>